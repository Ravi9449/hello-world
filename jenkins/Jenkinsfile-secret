properties([
    parameters([
        [$class: 'ChoiceParameter',
            choiceType: 'PT_SINGLE_SELECT',
            name: 'K8S_PODS',
            description: 'Select the Kubernetes Pod to list',
            script: [
                $class: 'GroovyScript',
                script: [
                    script:
                    '''
                        def kubectlCmd = "kubectl get secrets check-secret -o jsonpath='{.data.password}'"
                        def password = ""
                        
                        def proc = kubectlCmd.execute()
                        proc.waitFor()
                        return proc
                    '''
                ],
            ]
        ]
    ])
])

pipeline {
    agent any

    stages {
        stage('Check') {
            steps {
                script {
                    echo "check"
                }
            }
        }
    }
}
