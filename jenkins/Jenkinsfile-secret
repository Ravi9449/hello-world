pipeline {
    agent any

    parameters {
        string(name: 'KUBE_NAMESPACE', description: 'Kubernetes Namespace', defaultValue: 'default')
        text(name: 'PODS_LIST', description: 'List of Pods in the Namespace', defaultValue: '')

    stages {
        stage('Configure kubectl') {
            steps {
                script {
                    // sh """
                    // echo "$KUBE_CONFIG_DATA" | base64 --decode > $HOME/.kube/config
                    // kubectl config use-context your-cluster-context
                    // """
                    echo "check"
                }
            }
        }
    }

    post {
        always {
            script {
                def podsList = sh(script: "kubectl get pods -n ${params.KUBE_NAMESPACE} -o custom-columns=NAME:.metadata.name --no-headers=true", returnStatus: true, returnStdout: true).trim()
                currentBuild.description = "List of Pods in namespace ${params.KUBE_NAMESPACE}:\n${podsList}"
                params.PODS_LIST = podsList
            }
        }
    }
}
