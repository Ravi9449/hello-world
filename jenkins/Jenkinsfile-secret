properties([
    parameters([
        [$class: 'ChoiceParameter',
            choiceType: 'PT_SINGLE_SELECT',
            name: 'K8S_PODS',
            description: 'Select the Kubernetes Pod to list',
            script: [
                $class: 'GroovyScript',
                script: [
                    script:
                    '''
                        def kubectlCmd = "kubectl get secrets check-secret -o jsonpath='{.data.password}'"
                        def password = ""
                        
                        def proc = kubectlCmd.execute()
                        proc.in.eachLine { line ->
                            password = line
                        }
                        
                        proc.waitFor()
                        
                        def decodedPassword = ""
                        try {
                            def base64 = new sun.misc.BASE64Decoder()
                            decodedPassword = new String(base64.decodeBuffer(password))
                        } catch (Exception e) {
                            println "Error decoding base64: ${e.message}"
                        }
                        
                        return decodedPassword
                    '''
                ],
            ]
        ]
    ])
])

pipeline {
    agent any

    stages {
        stage('Check') {
            steps {
                script {
                    echo "check"
                }
            }
        }
    }
}
