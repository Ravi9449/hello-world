properties([
    parameters([
        [$class: 'ChoiceParameter',
            choiceType: 'PT_SINGLE_SELECT',
            name: 'K8S_PODS',
            description: 'Select the Kubernetes Pod to list',
            script: [
                $class: 'GroovyScript',
                script: [
                    script:
                    '''
                        def secretName = input("Enter the name of the Kubernetes Secret: ")
                        def kubectlCmd = "kubectl get secret ${secretName} -o json"
                        def secretData = [:]
                        
                        def proc = kubectlCmd.execute()
                        proc.in.eachLine { line ->
                            // Parse the JSON output to retrieve the data field
                            def json = new groovy.json.JsonSlurper().parseText(line)
                            secretData = json.data
                        }
                        
                        // Decode the base64-encoded username and password
                        def username = new String(secretData.username, 'UTF-8')
                        def password = new String(secretData.password, 'UTF-8')
                        
                        return "Username: ${username}, Password: ${password}"
                    '''
                ],
            ]
        ]
    ])
])

pipeline {
    agent any

    stages {
        stage('Check') {
            steps {
                script {
                    echo "check"
                }
            }
        }
    }
}
