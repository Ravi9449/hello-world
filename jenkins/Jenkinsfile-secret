properties([
    parameters([
        [$class: 'DynamicChoiceParameter',
            choiceType: 'ET_SINGLE_SELECT',
            name: 'SECRET_DATA',
            description: 'Select the Secret Data',
            script: [
                $class: 'GroovyScript',
                script: [
                    script:
                    '''
                        def secretName = "check-secret"
                        def kubectlCmd = "kubectl get secret ${secretName} -o json"
                        def secretData = []

                        try {
                            def proc = kubectlCmd.execute()
                            proc.waitFor()
                            def output = proc.text
                            def json = new groovy.json.JsonSlurper().parseText(output)
                            json.data.each { key, value ->
                                secretData.add(key)
                            }
                        } catch (Exception e) {
                            secretData.add("Error: ${e.message}")
                        }
                        
                        return secretData
                    '''
                ],
            ]
        ]
    ])
])


pipeline {
    agent any

    stages {
        stage('Check') {
            steps {
                script {
                    echo "check"
                }
            }
        }
    }
}
