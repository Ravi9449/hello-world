properties([
    parameters([
        [$class: 'ChoiceParameter',
            choiceType: 'PT_CHECKBOX',
            name: 'CHECK',
            script: [
                $class: 'GroovyScript',
                script: [
                    script:
                    '''
                        import static groovy.io.FileType.DIRECTORIES
                        def list = []
                        new File('/Users/ravi/Desktop/J/SAP').eachFileRecurse (DIRECTORIES) { file ->
                            list << file.name
                        }
                        return list
                    '''
                ]
            ]
        ],
        [$class: 'ChoiceParameter',
            choiceType: 'PT_SINGLE_SELECT',
            name: 'K8S_PODS',
            description: 'Select the Kubernetes Pod to list',
            script: [
                $class: 'GroovyScript',
                script: [
                    script:
                    '''
                        def kubectlCmd = "kubectl get pods -n default -o custom-columns=NAME:.metadata.name --no-headers"
                        def pods = []
                        
                        def proc = kubectlCmd.execute()
                        proc.in.eachLine { line ->
                            pods.add(line)
                        }
                        
                        proc.waitFor()
                        return pods
                    '''
                ]
            ]
        ]
    ])
])

pipeline {
    agent any

    stages {
        stage('Check') {
            steps {
                script {
                    echo "check"
                }
            }
        }
    }
}
