properties([
    parameters([
        [$class: 'ChoiceParameter',
            choiceType: 'PT_SINGLE_SELECT',
            name: 'K8S_PODS',
            description: 'Select the Kubernetes Pod to list',
            script: [
                $class: 'GroovyScript',
                script: [
                    script:
                    '''
                        def kubectlCmd = "kubectl get secret check-secret -o=jsonpath='{.data.username}' | base64 --decode"
                        def pods = []
                        
                        def proc = kubectlCmd.execute()
                        proc.in.eachLine { line ->
                            pods.add(line)
                        }
                        
                        proc.waitFor()
                        return pods
                    '''
                ],
            ]
        ]
    ])
])

pipeline {
    agent any

    stages {
        stage('Check') {
            steps {
                script {
                    echo "check"
                }
            }
        }
    }
}
