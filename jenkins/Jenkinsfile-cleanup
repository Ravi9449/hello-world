#!groovy

properties([
    parameters([
        [$class: 'ChoiceParameter',
            choiceType: 'PT_CHECKBOX',
            name: 'CHECK',
            script: [
                $class: 'GroovyScript',
                script: [
                    script:
                    '''
                        import static groovy.io.FileType.DIRECTORIES
                        def list = []
                        new File('/Users/ravi/Desktop/J/SAP').eachFileRecurse (DIRECTORIES) { file ->
                            list << file.name
                        }
                        return list
                    '''
                ]
            ]]
    ])
])
pipeline {
   agent any
   
   
   stages {
      stage('Stage1'){
         steps{
            script{
                echo "${params.CHECK}"
                if (params.CHECK == null) {
                        currentBuild.result = 'FAILURE'
                        error("CHECK parameter is not provided.")
                    }
                str = env.CHECK.split(',')
                for (String values in str){
                    echo "Deleting $values"
                    sh "cd /Users/ravi/Desktop/J/SAP && rm -rf $values"
                }
            }
         }
      }

   } 
}
